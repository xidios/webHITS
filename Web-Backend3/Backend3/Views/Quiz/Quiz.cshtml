@model Backend3.Models.QuizViewModel
@{
    ViewBag.Title = "Hello Quiz";
}

<h2>Quiz</h2>

<form class="form-horizontal" asp-action="Quiz">
    <div class="form-group">

        <label class="col-md-2 control-label">@Model.Number1 @Model.Operation @Model.Number2 = </label>
        <div class="col-md-10">
            @if (Model.ListOfResults != null)
            {
                for (var i = 0; i < Model.ListOfResults.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.ListOfResults[i].Number1" />
                    <input type="hidden" asp-for="@Model.ListOfResults[i].Number2" />
                    <input type="hidden" asp-for="@Model.ListOfResults[i].Operation" />
                    <input type="hidden" asp-for="@Model.ListOfResults[i].Answer" />
                    <input type="hidden" asp-for="@Model.ListOfResults[i].Equal" />
                }
            }
            <input asp-for="Answer" class="form-control" />
            <input type="hidden" asp-for="Number1" />
            <input type="hidden" asp-for="Number2" />
            <input type="hidden" asp-for="Operation" />
            <input type="hidden" asp-for="Result" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">

            <button type="submit" name="Action" class="btn btn-default" value="Submit">Submit</button>
            <button type="submit" name="Action" class="btn btn-primary" value="Finish">Finish</button>
        </div>
    </div>
   
</form>