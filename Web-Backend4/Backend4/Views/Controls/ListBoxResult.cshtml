@using Backend4.Models.Controls
@model Backend4.Models.Controls.ListBoxViewModel
@{
    ViewBag.Title = "List Box";
    var allMonths = ViewBag.AllMonths as Month[];
    var montsMap = allMonths.ToDictionary(x => x.Id);
}

<h2>List Box</h2>
<dl class="dl-horizontal">
    <dt>Months</dt>
    @if (Model.Months != null && Model.Months.Length > 0)
    {
        <dd>@String.Join(", ", Model.Months.Select(x => montsMap[x].Name))</dd>
    }
    else
    {
        <dd>(none)</dd>
    }
</dl>