@model Backend4.Models.Controls.ListBoxViewModel
@{
    ViewBag.Title = "List Box";
}

<h2>List Box</h2>

<form asp-action="ListBox" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Months" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Months" asp-items="@(new SelectList(ViewBag.AllMonths, "Id", "Name"))" multiple="multiple" class="form-control"></select>
            <span asp-validation-for="Months"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-default">Submit</button>
        </div>
    </div>
</form>