@model Backend4.Models.Controls.DropDownListViewModel
@{
    ViewBag.Title = "Drop-down List";
}

<h2>Drop-down List</h2>

<form asp-action="DropDownList" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Month" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Month" asp-items="@(new SelectList(ViewBag.AllMonths, "Id", "Name"))" class="form-control">
            </select>
            <span asp-validation-for="Month"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-default">Submit</button>
        </div>
    </div>
</form>