@model Backend4.Models.Controls.RadioViewModel
@{
    ViewBag.Title = "Radio";
}

<h2>Radio</h2>

<form asp-action="Radio" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Month" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @foreach (var month in ViewBag.AllMonths)
            {
                <div class="radio">
                    <label for="Month_@month.Id">
                        <input id="Month_@month.Id" asp-for="Month" type="radio" value="@month.Id"/>
                        @month.Name
                    </label>
                </div>
            }
            <span asp-validation-for="Month"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-default">Submit</button>
        </div>
    </div>
</form>