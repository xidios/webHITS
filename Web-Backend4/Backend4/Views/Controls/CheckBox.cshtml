@model Backend4.Models.Controls.CheckBoxViewModel
@{
    ViewBag.Title = "Check Box";
}

<h2>Check Box</h2>

<form asp-action="CheckBox" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <div class="checkbox">
                <label asp-for="IsSelected">
                    <input asp-for="IsSelected" />
                    @Html.DisplayNameFor(x => x.IsSelected)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-default">Submit</button>
        </div>
    </div>
</form>