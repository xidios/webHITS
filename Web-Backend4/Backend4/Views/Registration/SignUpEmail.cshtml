@model Backend4.Models.RegisterUserMailModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form class="form-horizontal" asp-action="SignUpEmail">
    <input asp-for="FirstName" type="hidden" />
    <input asp-for="SecondName" type="hidden" />
    <input asp-for="Day" type="hidden" />
    <input asp-for="Month" type="hidden" />
    <input asp-for="Year" type="hidden" />
    <input asp-for="Gender" type="hidden" />



    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Password</label>
        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Confirm password</label>
        <div class="col-md-10">
            <input asp-for="CPassword" type="password" class="form-control" />
            <span asp-validation-for="CPassword"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <div class="checkbox">
                <label>
                    <input asp-for="Remember" type="checkbox" />
                    Remember?
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-primary">Complete sign up</button>
        </div>
    </div>
</form>